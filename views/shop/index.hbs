<div class="itemList">
  {{# each products}}
    <div class="item">
      <a class="productLink" href="/product/{{ this.item._id }}" role="button">
          <div class="thumbnail">
            <img src="{{ this.item.imagePath }}" alt="..." class="img-responsive">
            <div class="caption">
              <p class="title">{{ this.item.title }}</p>
              <div class="clearfix">
                <div class="price pull-left">${{ this.item.price }}</div>
                <div class="pull-right"><i class="fa fa-chevron-right" aria-hidden="true"></i></div>
              </div>
            </div>
          </div>
        </a>
    </div>
  {{/each}}
</div>