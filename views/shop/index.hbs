{{# each products}}
  <div class="row">
    {{# each this}}
    <div class="col-sm-6 col-md-3">
      <a class="productLink" href="/product/{{ this._id }}" role="button">
        <div class="thumbnail">
          <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
          <div class="caption">
            <p class="title">{{ this.title }}</p>
            <div class="clearfix">
              <div class="price pull-left">${{ this.price }}</div>
              <div class="pull-right"><i class="fa fa-chevron-right" aria-hidden="true"></i></div>
            </div>
          </div>
        </div>
      </a>
    </div>
    {{/each}}
  </div>
{{/each}}