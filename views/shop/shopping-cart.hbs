{{# if products}}
	<div class="row">
		<div class="col-sm-12 col-md-12">
			<ul class="list-group">
				{{# each products}}
					<li class="list-group-item">
						<span class="badge">{{ this.qty }}</span>
						<strong>{{ this.item.title }}</strong>
						<span class="label label-success">${{ this.price }}</span>
						<div class="btn-group">
							<button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Options<span class="caret"></span></button>
							<ul class="dropdown-menu">
								<li><a href="#">Remove 1</a></li>
								<li><a href="#">Remove All</a></li>
							</ul>
						</div>
					</li>
				{{/each}}
			</ul>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12 col-md-12">
			<strong>Total: ${{ totalPrice }}</strong>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-sm-12 col-md-12">
			<button type="button" class="btn btn-success">Checkout</button>
		</div>
	</div>
{{ else }}
<div class="row">
	<div class="col-sm-12 col-md-12">
		<h2>No Items in Cart.</h2>
	</div>
</div>
{{/if}}